@charset "utf-8";
#login{
    background-color: #3895e8;
}
#login .wpn { width: 1180px; margin: 0 auto; }
#login .pos { position: relative; }
#login .wrap{
    box-sizing: border-box;
    height: 100vh;
    background: url("../img/bj.jpg") no-repeat center;
    background-size: auto 100vh;
    position:  relative;
}
#login .form-data{
  background-color: #ffffff;
  width: 460px;
  left: 50%;
  margin-left: -230px;
  border-radius: 5px;
  -webkit-box-shadow: 0 0 30px rgba(0,0,0,.1);
  box-shadow: 0 0 30px rgba(0,0,0,.1);
  padding: 65px 0 30px 0;
  position: fixed;
  top: 50%;
  margin-top: -190px;
}
#login .form-data .p-input,.find_password .p-input{
    padding: 5px 0;
    height: 44px;
    box-sizing: border-box;
    border-bottom: 1px solid #e5e5e5;
    width: 340px;
    margin: 0 auto 16px;
    line-height: 14px;
    display: block;
}
#login .form-data .p-input{
  line-height: 35px;
}
#login .form-data .p-input input{
  line-height: 35px;
  width: 100%;
}
#login .form-data .head-logo{
    position: absolute;
    top: -47px;
    left: 116px;
}
#login .form-data .lang-btn{
    width: 340px;
    font-size: 18px;
    font-weight: bold;
    color: white;
    height: 50px;
    line-height: 25px;
    text-align: center;
    margin: 20px auto;
    display: block;
    border-radius: 5px;
    cursor: pointer;
    border: 0;
    background-color: #42a5f5;
}
#login .form-data .lang-btn:hover{
    background-color: #3383c3;
}
#login .wrap .right{
    position: absolute;
    width: 1180px;
    bottom: -80px;
    text-align: center;
    line-height: 40px;
    left: 50%;
    margin-left: -590px;
    color: rgba(0,0,0,.3);
}
